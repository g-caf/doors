{
  "name": "guest-checkin-system",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "concurrently \"npm run server:dev\" \"vite\"",
    "server:dev": "nodemon --exec ts-node server/index.ts",
    "server:build": "tsc --project server/tsconfig.json",
    "server:start": "node dist/server/index.js",
    "build": "npm run server:build && tsc && vite build",
    "start": "npm run server:start",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "db:init": "node dist/server/scripts/initDb.js",
    "create-admin": "ts-node server/scripts/createAdmin.ts",
    "test:api": "node test-api.js",
    "postbuild": "npm run db:init"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.15.0",
    "react-hook-form": "^7.45.4",
    "@hookform/resolvers": "^3.3.1",
    "zod": "^3.22.2",
    "axios": "^1.5.0",
    "lucide-react": "^0.263.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "multer": "^1.4.5-lts.1",
    "express-rate-limit": "^6.10.0",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "nodemailer": "^6.9.4",
    "better-sqlite3": "^8.7.0",
    "dotenv": "^16.3.1",
    "morgan": "^1.10.0",
    "express-validator": "^7.0.1",
    "typescript": "^5.0.2",
    "@types/node": "^20.5.0",
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/multer": "^1.4.7",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/nodemailer": "^6.4.9",
    "@types/morgan": "^1.9.4",
    "@types/better-sqlite3": "^7.6.4"
  },
  "devDependencies": {
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "vite": "^4.4.5",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1"
  }
}
